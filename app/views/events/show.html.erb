<h2><%= @event.name %></h2>
<h3><%= @event.description %></h3>
<p><%= @event.location %></p>

<h3>Participants</h3>
<ul>
<% @event.participants.each do |participant| %>
    <li><strong><%= participant.popularity_label %></strong> <%= participant.name %> is bringing <%= participant.guests %> guests<br />
    Bringing a guest?  <%= button_to "Guest +1", add_guest_event_participant_path(@event.id, participant.id) %>
  </li>
<% end %>
</ul>

<h2>Add Participant</h2>
 
<%= form_for [@event, @event.participants.new]  do |form| %>
  <%= form.text_field :name %>
  <%= form.submit %>
<% end %>

<div class="btn btn-warning">
<%= link_to "Back", events_path %>
</div>
